<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4"
    android:background="@drawable/col">

    <TextView
        android:id="@+id/mensajePermiso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Por favor, acepta primero los permisos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/solicitarPermisosButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
    />

    <Button
        android:id="@+id/solicitarPermisosButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitar Permisos"
        app:layout_constraintTop_toBottomOf="@+id/mensajePermiso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
